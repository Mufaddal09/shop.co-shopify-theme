                          <p>
                            <a href="{{ filter_value.url_to_remove }}">
                              {{ filter.label }}: {{ filter_value.label }} X
                            </a>
                          </p>
                        {%- endfor -%}
                      {%- endif -%}
                    {%- endfor -%}
