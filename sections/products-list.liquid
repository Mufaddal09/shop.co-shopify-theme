{% liquid
  if section.settings.btn_style == 'primary-btn'
    assign button_style = 'primary-button'
    assign show_btn = true
  elsif section.settings.btn_style == 'secondary-btn'
    assign button_style = 'secondary-button'
    assign show_btn = true
  else
    assign show_btn = false
  endif
%}
<div class="featured-collection-wrap section">
  <div class="featured-collection">
    <div class="container">
      <div class="section-title text-center" data-aos="fade-up">
        <h3 class="uppercase">{{ section.settings.list_title }}</h3>
      </div>
      <div class="product-grid" data-aos="fade-up">
        <div class="row">
          {% for product in section.settings.collection.products limit: 4 %}
            {% render 'product-card', product: product %}
          {% endfor %}
        </div>
      </div>
      {% if show_btn %}
        <div class="cta">
          <a class="{{ button_style }}" href="{{ section.settings.collection.url }}">View All</a>
        </div>
      {% endif %}
      <hr>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "product-list",
  "presets": [
    {
      "name": "Product List",
      "blocks": [{ "type": "product-title" }, { "type": "price" }]
    }
  ],
  "blocks": [
    {
      "name": "product-title",
      "type": "product-title",
      "limit": 1
    },
    {
      "name": "price",
      "type": "price",
      "limit": 1
    },
    {
      "type": "@app"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "list_title",
      "label": "Title"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "select",
      "id": "btn_style",
      "label": "Button Style",
      "options": [
        {
          "value": "primary-btn",
          "label": "Primary"
        },
        {
          "value": "secondary-btn",
          "label": "Secondary"
        },
        {
          "value": "disable",
          "label": "None"
        }
      ],
      "default": "secondary-btn"
    }
  ]
}
{% endschema %}
