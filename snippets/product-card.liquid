{% liquid
  if template contains 'collection'
    assign col = 'col-4'
  else
    assign col = 'col-3'
  endif
%}
<div class="product-card {{ col }}">
  <div class="product-img">
    <a href="{{ product.url }}">
      {% for image in product.images limit: 2 %}
        <img
          class="{% if forloop.first %}first{% else %}second{% endif %}"
          loading="lazy"
          src="{{ image.src | image_url }}"
          width="{{ image.width }}"
          height="{{ image.height }}"
          alt="{{ image.alt }}"
        >
      {% endfor %}
    </a>
  </div>
  {% if template contains 'collection' or 'product' %}
    <div class="product-title">
      <a href="{{ product.url }}">
        <h4>{{ product.title }}</h4>
      </a>
    </div>
    <div class="product-review-wrap">
      <!-- JUDGE.ME code starts HERE -->
      <div class="jdgm-widget jdgm-preview-badge" data-id="{{ product.id }}">
        {{ product.metafields.judgeme.badge }}
      </div>
      <!-- JUDGE.ME code ends HERE -->
    </div>
    <div class="product-price-wrap">
      <div class="price">{{ product.price | money_with_currency }}</div>
      <div class="discounted-price">
        <div class="compare-at-price">{{ product.compare_at_price | money_with_currency }}</div>
        <div class="product-discount">
          {% assign difference = product.compare_at_price | minus: product.price %}
          {% assign discount = difference | times: 100 | divided_by: product.compare_at_price %}
          -{{ discount }}%
        </div>
      </div>
    </div>
  {% else %}
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'product-title' %}
          <div class="product-title">
            <a href="{{ product.url }}">
              <h4>{{ product.title }}</h4>
            </a>
          </div>
        {% when '@app' %}
          <div class="product-review-wrap">
            <!-- JUDGE.ME code starts HERE -->
            <div class="jdgm-widget jdgm-preview-badge" data-id="{{ product.id }}">
              {{ product.metafields.judgeme.badge }}
            </div>
            <!-- JUDGE.ME code ends HERE -->
          </div>
        {% when 'price' %}
          <div class="product-price-wrap">
            <div class="price">{{ product.price | money_with_currency }}</div>
            <div class="discounted-price">
              <div class="compare-at-price">{{ product.compare_at_price | money_with_currency }}</div>
              <div class="product-discount">
                {% assign difference = product.compare_at_price | minus: product.price %}
                {% assign discount = difference | times: 100 | divided_by: product.compare_at_price %}
                -{{ discount }}%
              </div>
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  {% endif %}
</div>
